{
    "Dir": {
        "log_root": "results/fashion-mnist/GenMMK5/"
    },
    "Glow" : {
        "image_shape": [32, 32, 1],
        "hidden_channels": 512,
        "K": 4,
        "L": 3,
        "actnorm_scale": 1.0,
        "flow_permutation": "invconv",
        "flow_coupling": "affine",
        "LU_decomposed": false,
        "learn_top": false,
        "y_condition": false,
        "y_classes": 1
    },
    "Mixture" : {
        "naive": true,
        "num_component": 5,
        "regulate_std": false
    },
    "Criterion" : {
        "y_condition": "single-class"
    },
    "Data" : {
        "center_crop": 28,
        "resize": 32
    },
    "Optim": {
        "name": "adam",
        "args": {
            "lr": 1e-3,
            "betas": [0.9, 0.9999],
            "eps": 1e-8
        },
        "Schedule": {
            "name": "noam_learning_rate_decay",
            "args": {
                "warmup_steps": 1000,
                "minimum": 1e-4
            }
        }
    },
    "Device": {
        "glow": ["cuda:0"],
        "data": "cuda:0"
    },
    "Train": {
        "batch_size": 64,
        "num_batches": 28500,
        "max_grad_clip": 5,
        "max_grad_norm": 100,
        "max_checkpoints": 5,
        "checkpoints_gap": 1000,
        "prior_gap": 5,
        "num_plot_samples": 1,
        "scalar_log_gap": 50,
        "plot_gap": 50,
        "inference_gap": 50,
        "warm_start": "",
        "weight_y": 0.5
    },
    "Infer": {
        "pre_trained": ""
    }
}
